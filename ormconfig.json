{
  "type": "postgres",
  "host": "${POSTGRES_HOST}",
  "port": 5432,
  "username": "${POSTGRES_USER}",
  "password": "${POSTGRES_PASSWORD}",
  "database": "${POSTGRES_DATABASE}",
  "migrations": [
    "./src/database/migrations/*.ts"
  ],
  "entities": [
    "./src/app/models/*.ts"
  ],
  "cli": {
    "migrationsDir": "./src/database/migrations"
  }
}
